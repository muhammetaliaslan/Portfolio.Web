@model IEnumerable<Portfolio.Web.Entities.UserMessage>
@{
    ViewData["Title"] = "Gelen Mesajlar";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<h4 class="mb-4">Gelen Mesajlar</h4>

<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>Ad Soyad</th>
            <th>Email</th>
            <th>Konu</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var msg in Model)
        {
            <tr>
                <td>@msg.Name</td>
                <td>@msg.Email</td>
                <td>@msg.Subject</td>
                <td>
                    @if (msg.IsRead)
                    {
                        <span class="btn btn-success btn-sm">Okundu</span>
                    }
                    else
                    {
                        <span class="btn btn-warning btn-sm">Okunmadı</span>
                    }
                </td>
                <td>
                    <a class="btn btn-primary btn-sm" href="@Url.Action("Details", "AdminMessage", new { id = msg.UserMessageId })">Mesajı Aç</a>
                    <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", "AdminMessage", new { id = msg.UserMessageId })" onclick="return confirm('Mesajı silmek istediğinizden emin misiniz?')">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
