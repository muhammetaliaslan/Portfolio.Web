@model IEnumerable<Portfolio.Web.Entities.About>

@{
    ViewData["Title"] = "Hakkımda Listesi";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>
<a asp-action="Create" class="btn btn-primary mb-3">Yeni Ekle</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Başlık</th>
            <th>Açıklama</th>
            <th>Görsel</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" width="100" />
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AboutId" class="btn btn-warning">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.AboutId" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
