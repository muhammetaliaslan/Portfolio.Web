@model Portfolio.Web.Entities.Experience

@{
    ViewData["Title"] = "Deneyimi Düzenle";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<div class="pc-container">
    <div class="pc-content">
        <h2>Deneyimi Düzenle</h2>

        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="ExperienceId" />

            <div class="mb-3">
                <label class="form-label">Başlık</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Şirket</label>
                <input asp-for="Company" class="form-control" />
                <span asp-validation-for="Company" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Şehir</label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Başlangıç Yılı</label>
                <input asp-for="StartYear" class="form-control" />
                <span asp-validation-for="StartYear" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Bitiş Yılı</label>
                <input asp-for="EndYear" class="form-control" />
                <span asp-validation-for="EndYear" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Açıklama</label>
                <textarea asp-for="Description" class="form-control"></textarea>
            </div>

            <button type="submit" class="btn btn-success">Güncelle</button>
            <a asp-action="Index" class="btn btn-secondary">İptal</a>
        </form>
    </div>
</div>
