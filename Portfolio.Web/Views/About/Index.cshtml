@model Portfolio.Web.Entities.About

@{
    ViewData["Title"] = "Hakkımda";
    Layout = "~/Views/UILayout/Index.cshtml";
}

@if (Model != null && Model.IsAvailable)
{
    <section id="about" class="about section">
        <div class="container section-title" data-aos="fade-up">
            <h2>Hakkımda</h2>
            <p>@Model.Description</p>
        </div>

        <div class="container" data-aos="fade-up" data-aos-delay="100">
            <div class="row gy-4 justify-content-center">

                <!-- Profil Resmi -->
                <div class="col-lg-4 text-center">
                    <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Title" />
                </div>

                <!-- Hakkımda İçerik -->
                <div class="col-lg-8 content">
                    <h2>@Model.Title</h2>
                    <p class="fst-italic py-3">@Model.Description</p>

                    <div class="row">
                        <div class="col-lg-6">
                            <ul class="list-unstyled">
                                <li><i class="bi bi-chevron-right"></i> <strong>Doğum Tarihi:</strong> <span>@Model.Birthdate.ToShortDateString()</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Web Site:</strong> <span>@Model.WebSite</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Telefon:</strong> <span>@Model.PhoneNumber</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Şehir:</strong> <span>@Model.City</span></li>
                            </ul>
                        </div>

                        <div class="col-lg-6">
                            <ul class="list-unstyled">
                                <li><i class="bi bi-chevron-right"></i> <strong>Mezuniyet:</strong> <span>@Model.Graduation</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Email:</strong> <span>@Model.Email</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Freelance:</strong> <span>@(Model.IsAvailable ? "Mevcut" : "Mevcut Değil")</span></li>
                            </ul>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
}
else
{
    <section class="about section">
        <div class="container text-center py-5">
            <h2>Hakkımda</h2>
            <p>Hakkımda bilgileri yüklenemedi.</p>
        </div>
    </section>
}
