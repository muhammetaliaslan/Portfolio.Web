@model List<Portfolio.Web.Entities.Testimonial>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />

<section id="testimonials" class="testimonials section">

    <div class="container section-title" data-aos="fade-up">
        <h2>Referanslarım</h2>
        <p>İş Arkadaşlarımdan Gelen Bazı Yorumlar</p>
    </div>

    <div class="container" data-aos="fade-up" data-aos-delay="100">
        @if (Model.Any())
        {
            <div class="swiper mySwiper">
                <div class="swiper-wrapper">
                    @foreach (var item in Model)
                    {
                        <div class="swiper-slide text-center">
                            <img src="@item.ImageUrl" class="rounded-circle mb-3" style="width:120px; height:120px;" />
                            <h3>@item.Name</h3>
                            <h4>@item.Title</h4>
                            <p>"@item.Comment"</p>
                            <div class="stars">
                                @for (int i = 0; i < item.Review; i++)
                                {
                                    <i class="bi bi-star-fill text-warning"></i>
                                }
                            </div>
                        </div>
                    }
                </div>

                <!-- Pagination noktaları -->
                <div class="swiper-pagination"></div>
            </div>
        }
    </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
<script>
    var swiper = new Swiper(".mySwiper", {
        loop: true,
        pagination: {
            el: ".swiper-pagination",
            clickable: true
        }
    });
</script>

<style>
    .swiper-pagination {
        position: relative;
        margin-top: 15px;
        text-align: center;
    }

    .swiper-pagination-bullet {
        width: 12px;
        height: 12px;
        background: #333;
        opacity: 0.4;
        display: inline-block;
        border-radius: 50%;
        margin: 0 5px;
        cursor: pointer;
    }

    .swiper-pagination-bullet-active {
        background: #007bff;
        opacity: 1;
    }
</style>
