@inject Portfolio.Web.Context.PortfolioContext context

@{
    var social = context.SocialMedias.FirstOrDefault();
}

<section id="hero" class="hero section">
    <img src="~/_photo.jpg" alt="" data-aos="fade-in">

    <div class="container text-center" data-aos="zoom-out" data-aos-delay="100">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <h2>Muhammet Ali Aslan</h2>
                <p>Web geliştirme, yazılım ve teknoloji üzerine yazılar</p>
              
            </div>
        </div>
    </div>

    @if (social != null)
    {
        <div class="hero-social-links" style="position: absolute; top: 20px; right: 20px;">
            <a href="@social.Twitter" target="_blank" class="twitter"><i class="bi bi-twitter"></i></a>
            <a href="@social.Facebook" target="_blank" class="facebook"><i class="bi bi-facebook"></i></a>
            <a href="@social.Instagram" target="_blank" class="instagram"><i class="bi bi-instagram"></i></a>
            <a href="@social.LinkedIn" target="_blank" class="linkedin"><i class="bi bi-linkedin"></i></a>
        </div>
    }
</section>
