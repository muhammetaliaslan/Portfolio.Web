@model Portfolio.Web.Entities.Testimonial

@{
    ViewData["Title"] = "Referans Düzenle";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<h2>Referans Düzenle</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="TestimonialId" />

    <div class="mb-3">
        <label class="form-label">Adı</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Unvan</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Resim URL</label>
        <input asp-for="ImageUrl" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Yorum</label>
        <textarea asp-for="Comment" class="form-control"></textarea>
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Değerlendirme</label>
        <input type="number" asp-for="Review" class="form-control" min="0" max="5" />
        <span asp-validation-for="Review" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Güncelle</button>
    <a asp-action="Index" class="btn btn-secondary">Geri</a>
</form>
